                <% var msgsArray = []; %>
                <% for (var key in errors) {
                    if (errors.hasOwnProperty(key)) {
                      msgsArray.push(errors[key].msg);
                    }
                  } %>
                <div>
                    <ul>
                        <% msgsArray.forEach(msg => { %>
                            <li style="color: brown;"><%= msg %></li>
                        <% }) %>
                    </ul>
                </div>
                
            <% } %>

